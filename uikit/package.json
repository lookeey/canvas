{
  "name": "canvas-uikit",
  "version": "0.0.1",
  "description": "UIkit package for the Canvas interface",
  "author": "lookeey",
  "license": "MIT",
  "repository": "lookeey/canvas-ui",
  "type": "module",
  "module": "dist/index.js",
  "sideEffects": false,
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json && rollup -c",
    "build:watch": "nodemon -e ts,tsx --watch ./src --watch ./rollup.config.js -x \"rm -rf ./dist && tsc --project tsconfig.json && rollup -c\"",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typegen": "chakra-cli tokens src/theme/index.ts",
    "typegen:watch": "chakra-cli tokens src/theme/index.ts --watch"
  },
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "react": "^16.0.0",
    "@chakra-ui/react": "^2.6.1",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-react": "^7.18.6",
    "@chakra-ui/cli": "^2.4.1",
    "@emotion/babel-plugin": "^11.10.5",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@storybook/addon-essentials": "7.0.12",
    "@storybook/addon-interactions": "7.0.12",
    "@storybook/addon-links": "7.0.12",
    "@storybook/blocks": "7.0.12",
    "@storybook/react": "7.0.12",
    "@storybook/react-vite": "7.0.12",
    "@storybook/testing-library": "0.0.14-next.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-storybook": "^0.6.12",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "prop-types": "15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^3.4.1",
    "rollup": "^3.6.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "7.0.12",
    "storybook-addon-theme-provider": "^0.1.10",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "util": "^0.12.5",
    "vite": "^4.3.8"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
